<?xml version="1.0" encoding="UTF-8" ?>
<Shell Title="CalendarExplorer"
    x:Class="CalendarExplorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalendarExplorer"
    xmlns:res="clr-namespace:CalendarExplorer.Resources">

    <ShellContent Title="{x:Static res:AppResources.GettingStartedTitle}"
                      ContentTemplate="{DataTemplate local:GettingStarted}" />
    <ShellContent Title="{x:Static res:AppResources.VerticalOrientationTitle}"
                      ContentTemplate="{DataTemplate local:VerticalOrientation}" />
    <ShellContent Title="{x:Static res:AppResources.CustomDayContentTitle}"
                      ContentTemplate="{DataTemplate local:CustomDayContent}" />
    <ShellContent Title="{x:Static res:AppResources.CustomHeaderTitle}"
                      ContentTemplate="{DataTemplate local:CustomHeader}" />
    <ShellContent Title="{x:Static res:AppResources.CustomAppearanceTitle}"
                      ContentTemplate="{DataTemplate local:CustomAppearance}" />
    <ShellContent Title="{x:Static res:AppResources.PopupEditorTitle}"
                      ContentTemplate="{DataTemplate local:PopupEditor}" />
    <ShellContent Title="{x:Static res:AppResources.CustomSelectionTitle}"
                      ContentTemplate="{DataTemplate local:CustomSelection}" />
</Shell>
